<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
      android:id="@+id/category_list_thumbnail"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginStart="4dp"
      android:layout_marginTop="6dp"
      android:layout_marginBottom="6dp"
      android:contentDescription="@string/thumbnail"
      android:scaleType="centerInside"
      tools:src="@drawable/dog_profile_pic" />

  <RelativeLayout
      android:layout_width="270dp"
      android:layout_height="100dp"
      android:layout_centerVertical="true"
      android:layout_marginStart="1dp"
      android:layout_marginEnd="-380dp"
      android:layout_toStartOf="@id/category_list_thumbnail"
      android:layout_toEndOf="@id/category_list_thumbnail">

    <TextView
        android:id="@+id/category_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        tools:text="Title" />

    <TextView
        android:id="@+id/category_list_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_list_title"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/quicksand_bold"
        android:maxLines="3"
        android:textSize="14sp"
        tools:text="Subtitle" />

    <TextView
        android:id="@+id/category_list_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_list_subtitle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="12sp"
        tools:text="Detail" />

  </RelativeLayout>
</RelativeLayout>
